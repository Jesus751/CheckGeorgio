<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".SubirItemActivity">

    <TextView
        android:id="@+id/txtServicioc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="NOMBRE:"
                android:textColor="#070707" />

            <EditText
                android:id="@+id/editTextTextNombreCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="EJEMPLO CAMBIO DE LLANATAS:"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btbguardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="Guardar">
            </Button>

        </LinearLayout>
        <ListView
            android:id="@+id/ListaMecRec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/material_on_primary_disabled"
            android:dividerHeight="0dp"
            android:headerDividersEnabled="false"
            />

    </LinearLayout>

</LinearLayout>